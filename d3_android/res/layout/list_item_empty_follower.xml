<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/empty_follower_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="Skill icon"
        android:paddingLeft="5dp"
        android:src="@drawable/barbarian_cleave" />

    <TextView
        android:id="@+id/empty_follower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/empty_follower_icon"
        android:fadingEdge="horizontal"
        android:text="Templar"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/empty_follower_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/empty_follower_name"
        android:layout_below="@id/empty_follower_name"
        android:fadingEdge="horizontal"
        android:paddingTop="10dp"
        android:singleLine="false"
        android:text="Peerless holy warrior who challenges demons head-on in melee."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>